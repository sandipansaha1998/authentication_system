<form action="/user/reset" method="post" id="reset-password"></form>

<div id="reset-container" class="col-12 col-md-5 mx-auto mt-3 p-4 rounded">
    <div class="box-title">
        <h3 class="text-center fw-bold">Reset Password</h3>
    </div>
    <div class="user-input">
        <input type="hidden" name="user_id" value="<%=user_id%>" form="reset-password">
        <label>Password</label>
        <div class="container border-bottom p-3">
            <span><i class="fa-solid fa-lock"></i></span>
            <input class="col-10" type="password" name="password" placeholder="Type your password" form="reset-password"
                id="create-user-password" required>
            </h6>
            <h6 class="mt-1 d-none" id="password-length-error"><span class="badge rounded-pill bg-danger"><i
                        class="fa-solid fa-triangle-exclamation me-1"></i>Minimum 6
                    characters</span></h6>
        </div>

        <label>Confirm Password</label>
        <div class="container border-bottom p-3">
            <span><i class="fa-solid fa-lock"></i></span>
            <input class="col-10" type="password" name="confirm_password" placeholder="Type your password"
                form="reset-password" id="create-user-confirm-password" required>
            <h6 class="mt-1 d-none" id="confirm-password-error">
                <span class="badge rounded-pill bg-danger"><i
                        class="fa-solid fa-triangle-exclamation me-1"></i>Passwords
                    donot Match</span>
            </h6>
            <h6 class="mt-1 d-none" id="confirm-password-match"><span class="badge rounded-pill bg-success"><i
                        class="fa-regular fa-circle-check me-1"></i> Passwords
                    Match</span></h6>
        </div>


    </div>
    <div class="button text-center">

        <input class="col-6 rounded-pill" type="submit" value="Reset" form="reset-password" id="create-user-submit"
            disabled>
    </div>
    <script>
        const isEmailValidate = true;
    </script>
    <script src="/js/validate_input.js"></script>


</div>